{
    "name": "journi-web-app",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "build": "npm run build:app && npm run build:storybook",
        "build:app": "GIT_SHA=`git rev-parse HEAD` react-scripts build",
        "build:storybook": "GIT_SHA=`git rev-parse HEAD` build-storybook -s ./public -o ./styleguide",
        "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
        "start": "react-scripts start",
        "storybook": "start-storybook -p 9009 -s public",
        "svg": "make svg",
        "test": "npm run test:acceptance && npm run test:visual && npm run test:unit",
        "test:acceptance": "NODE_ENV=test npx cucumber-js -f node_modules/cucumber-pretty || : ",
        "test:visual": "CI=true react-scripts test \".*.test.[jt]sx?$\"",
        "test:unit": "CI=true react-scripts test \".*.spec.[jt]sx?$\""
    },
    "dependencies": {
        "@apollo/react-hooks": "^3.1.5",
        "apollo-boost": "0.4.7",
        "graphql": "15.0.0",
        "i18next": "^19.4.4",
        "i18next-browser-languagedetector": "^4.1.1",
        "moment": "^2.24.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-helmet": "6.0.0",
        "react-i18next": "^11.4.0",
        "react-router-dom": "5.1.2",
        "styled-components": "5.1.0",
        "voca": "1.4.0"
    },
    "devDependencies": {
        "@storybook/addon-a11y": "5.3.18",
        "@storybook/addon-actions": "5.3.18",
        "@storybook/addon-knobs": "^5.3.18",
        "@storybook/addon-links": "5.3.18",
        "@storybook/addon-storyshots": "5.3.18",
        "@storybook/addon-storyshots-puppeteer": "5.3.18",
        "@storybook/addons": "5.3.18",
        "@storybook/preset-create-react-app": "2.1.1",
        "@storybook/react": "5.3.18",
        "@svgr/cli": "^5.4.0",
        "@testing-library/jest-dom": "^5.5.0",
        "@testing-library/react": "^10.0.3",
        "@testing-library/user-event": "^10.1.0",
        "@types/jest": "^25.2.1",
        "@types/node": "^13.13.4",
        "@types/react": "^16.9.34",
        "@types/react-dom": "^16.9.7",
        "@types/react-helmet": "5.0.15",
        "@types/react-router-dom": "^5.1.5",
        "@types/styled-components": "^5.1.0",
        "@types/voca": "1.4.0",
        "babel-plugin-macros": "2.8.0",
        "chai": "4.2.0",
        "create-index": "2.5.0",
        "cucumber": "6.0.5",
        "cucumber-pretty": "6",
        "husky": "^4.2.5",
        "node-sass": "^4.14.0",
        "portfinder": "^1.0.25",
        "prettier": "^2.0.5",
        "puppeteer": "^2.1.1",
        "react-scripts": "3.4.1",
        "react-test-renderer": "16.13.1",
        "require-context.macro": "1.2.2",
        "serve-handler": "^6.1.2",
        "styled-components.macro": "^1.0.0",
        "tslint": "^6.1.2",
        "tslint-config-prettier": "1.18.0",
        "tslint-immutable": "6.0.1",
        "tslint-loader": "3.5.4",
        "tslint-plugin-prettier": "^2.3.0",
        "tslint-react": "^5.0.0",
        "typescript": "^3.8.3"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run lint && npm run build && (npm outdated || true)",
            "post-merge": "npm install"
        }
    },
    "homepage": ".",
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "proxy": "https://charli-app-service.dev.janusplatform.io",
    "prettier": {
        "arrowParens": "avoid",
        "bracketSpacing": true,
        "printWidth": 80,
        "semi": false,
        "singleQuote": false,
        "tabWidth": 4,
        "trailingComma": "all"
    },
    "plugins": [
        "macros",
        "babel-plugin-styled-components"
    ]
}
