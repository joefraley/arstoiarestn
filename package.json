{
    "name": "journi-web-app",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject"
    },
    "dependencies": {
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^7.1.2",
        "@types/jest": "^24.0.0",
        "@types/node": "^12.0.0",
        "@types/react": "^16.9.0",
        "@types/react-dom": "^16.9.0",
        "node-sass": "^4.13.1",
        "prettier": "^1.19.1",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-scripts": "3.3.0",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-immutable": "^6.0.1",
        "tslint-loader": "^3.5.4",
        "tslint-plugin-prettier": "^2.1.0",
        "tslint-react": "^4.1.0",
        "typescript": "~3.7.2"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "prettier": {
        "bracketSpacing": true,
        "printWidth": 80,
        "semi": false,
        "singleQuote": false,
        "tabWidth": 4,
        "trailingComma": "all"
    },
    "tslint": {
        "extends": [
            "tslint-react",
            "tslint-immutable",
            "tslint-config-prettier"
        ],
        "linterOptions": {},
        "rules": {
            "prettier": true,
            "ban": false,
            "class-name": true,
            "comment-format": [
                true,
                "check-space"
            ],
            "curly": true,
            "eofline": false,
            "forin": true,
            "indent": [
                true,
                "spaces",
                4
            ],
            "interface-name": [
                true,
                "never-prefix"
            ],
            "interface-over-type-literal": true,
            "jsdoc-format": true,
            "jsx-alignment": true,
            "jsx-boolean-value": true,
            "jsx-curly-spacing": [
                true,
                "never"
            ],
            "jsx-no-bind": true,
            "jsx-no-lambda": false,
            "jsx-no-multiline-js": false,
            "jsx-no-string-ref": true,
            "jsx-self-close": true,
            "jsx-wrap-multiline": true,
            "label-position": true,
            "max-line-length": [
                true,
                120
            ],
            "member-ordering": [
                true,
                {
                    "order": [
                        "static-field",
                        "instance-field",
                        "constructor",
                        "public-instance-method",
                        "protected-instance-method",
                        "private-instance-method"
                    ]
                }
            ],
            "no-any": true,
            "no-arg": true,
            "no-bitwise": true,
            "no-console": [
                true,
                "log",
                "error",
                "debug",
                "info",
                "time",
                "timeEnd",
                "trace"
            ],
            "no-consecutive-blank-lines": true,
            "no-construct": true,
            "no-debugger": true,
            "no-duplicate-variable": true,
            "no-empty": true,
            "no-eval": true,
            "no-shadowed-variable": true,
            "no-string-literal": true,
            "no-switch-case-fall-through": true,
            "no-trailing-whitespace": false,
            "no-unused-expression": true,
            "one-line": [
                true,
                "check-catch",
                "check-else",
                "check-open-brace",
                "check-whitespace"
            ],
            "quotemark": [
                true,
                "double",
                "jsx-double"
            ],
            "radix": true,
            "semicolon": [
                true,
                "never"
            ],
            "switch-default": true,
            "triple-equals": [
                true,
                "allow-null-check"
            ],
            "typedef": [
                true,
                "call-signature",
                "parameter",
                "property-declaration"
            ],
            "typedef-whitespace": [
                true,
                {
                    "call-signature": "nospace",
                    "index-signature": "nospace",
                    "parameter": "nospace",
                    "property-declaration": "nospace",
                    "variable-declaration": "nospace"
                }
            ],
            "variable-name": [
                true,
                "ban-keywords",
                "check-format",
                "allow-leading-underscore",
                "allow-pascal-case"
            ],
            "whitespace": [
                true,
                "check-branch",
                "check-decl",
                "check-module",
                "check-operator",
                "check-separator",
                "check-type"
            ],
            "no-var-keyword": true,
            "readonly-keyword": true,
            "readonly-array": true,
            "no-let": true,
            "no-mixed-interface": true
        }
    }
}
